<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/colorMainDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="message_text">...</style>

    <!--カラムのヘッダ-->
    <style name="AsudokuColumnHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorBase</item>
        <item name="android:background">@color/colorMain</item>
    </style>

    <!--カラムのヘッダ（閲覧ページ）-->
    <style name="AsudokuColumnHeader.Read">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!--カラムのヘッダ（編集ページ）-->
    <style name="AsudokuColumnHeader.Write">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">6dp</item>
    </style>

    <!--カラム-->
    <style name="AsudokuColumn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <!--カラムの表示-->
    <style name="AsudokuColumn.Read">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!--カラムの編集-->
    <style name="AsudokuColumn.Write">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:colorControlNormal">@color/colorTextLight</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!--メニュー文字-->
    <style name="AsudokuMenuItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorIcon</item>
    </style>
    
    <!--メニュー画像-->
    <style name="AsudokuMenuItemImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:tint">@color/colorIcon</item>
    </style>

    <!--評価星画像-->
    <style name="EvaluationStar">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:tint">@color/colorEvaluationStar</item>
    </style>
    <!--評価星画像 大き目-->
    <style name="EvaluationStarLarge">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:tint">@color/colorEvaluationStar</item>
    </style>

</resources>
